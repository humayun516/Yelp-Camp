<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-4">
      <img src="<%=showCampground.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= showCampground.title %></h5>
        <p class="card-text"><%= showCampground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted">
          <%= showCampground.location %>
        </li>
        <li class="list-group-item">$<%= showCampground.price %>/night</li>
      </ul>
      <div class="card-body">
        <a
          class="btn btn-info"
          href="/campgrounds/<%= showCampground._id %>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%= showCampground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-body-secondary">
        2 days ago
        <!-- <a href="/campgrounds">All Campgrounds</a> -->
      </div>
    </div>
  </div>
</div>
